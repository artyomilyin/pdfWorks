#:kivy 1.10.0

MainScreen:

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: 80
            width: 300
            orientation: 'vertical'
            Button:
                text: 'Выбрать файлы'
                on_release: root.show_load()
            Button:
                text: 'Сохранить'
                on_release: root.show_save()

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            multiselect: True

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: 'Отмена'
                on_release: root.cancel()

            Button:
                text: 'Выбрать'
                on_release: root.load(filechooser.path, filechooser.selection)

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            multiselect: True
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: 'Отмена'
                on_release: root.cancel()

            Button:
                text: 'Сохранить'
                on_release: root.save(filechooser.path, text_input.text)